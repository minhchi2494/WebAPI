@model IEnumerable<WebApp.CustomerAttribute>

@{
    ViewData["Title"] = "Index";
}

<h1>Csutomer Attribute</h1>

@using (Html.BeginForm("Index","CustomerAttribute", FormMethod.Post)){
    <input type="text" name="code" placeholder="Attribute value code..."/>
    <input type="submit" value="Search"/>
}

<p>
    @*<a asp-action="Create">Create New</a>*@
    <br>
    <a href="/CustomerAttribute/Create" class="btn btn-info"><i class="fas fa-plus"></i> ADD</a>
</p>
<table class="table" border="1">
    <thead class="table-thead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.attribute_master)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.attribute_values_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.short_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.effective_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valid_until)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.attribute_master)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.attribute_values_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.short_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.parent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.effective_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valid_until)
            </td>
            <td>
                <a href="/CustomerAttribute/Details/@item.id"><i class="far fa-eye"></i></a>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.id }) | 
                @Html.ActionLink("Details", "Details", new {  id=item.id  }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.id }) *@
            </td>
            <td>
                <a href="/CustomerAttribute/Edit/@item.id"><i class="fas fa-edit"></i></a>
            </td>
            <td>
                <a href="/CustomerAttribute/Delete/@item.id"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
